{
  "version": 3,
  "configurePresets": [
    {
      "name": "user-llvm-path",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": ADD_PATH_HERE,
        "CMAKE_CXX_COMPILER": ADD_PATH_HERE
      }
    },
    {
      "name": "vcpkg-location",
      "hidden": true,
      "environment": {
        "VCPKG_ROOT": ADD_PATH_HERE
      },
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}\\scripts\\buildsystems\\vcpkg.cmake"
      }
    },
    {
      "name": "win_msvc_debug",
      "inherits": [
        "vcpkg-location",
        "base_win_msvc_debug"
      ]
    },
    {
      "name": "win_msvc_release",
      "inherits": [
        "vcpkg-location",
        "base_win_msvc_release"
      ]
    },
    {
      "name": "win_clang_debug",
      "inherits": [
        "vcpkg-location",
        "user-llvm-path",
        "base_win_clang_debug"
      ]
    },
    {
      "name": "win_clang_release",
      "inherits": [
        "vcpkg-location",
        "user-llvm-path",
        "base_win_clang_release"
      ]
    }
  ]
}