{
  "version": 3,
  "configurePresets": [
    {
      "name": "ci-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
      }
    },
    {
      "name": "ci-linux-clang-release",
      "inherits": ["base_clang_release", "ci-base"],
      "cacheVariables": {
         "CMAKE_CXX_COMPILER": "clang++",
         "CMAKE_C_COMPILER": "clang"
      }
    },
    {
      "name": "ci-linux-gcc-release",
      "inherits": ["release-base", "ci-base"],
      "cacheVariables": {
         "CMAKE_CXX_COMPILER": "g++",
         "CMAKE_C_COMPILER": "gcc"
      }
    },
    {
      "name": "ci-windows-msvc",
      "inherits": ["base_msvc_release", "ci-base"]
    },
    {
      "name": "ci-windows-clang",
      "inherits": ["base_clang_release", "ci-base"],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_C_COMPILER": "clang"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ci-linux-clang-release",
      "configurePreset": "ci-linux-clang-release"
    },
    {
      "name": "ci-linux-gcc-release",
      "configurePreset": "ci-linux-gcc-release"
    },
    {
      "name": "ci-windows-msvc",
      "configurePreset": "ci-windows-msvc"
    },
    {
      "name": "ci-windows-clang",
      "configurePreset": "ci-windows-clang"
    }
  ],
  "testPresets": [
    {
      "name": "ci-linux-clang-release",
      "configurePreset": "ci-linux-clang-release"
    },
    {
      "name": "ci-linux-gcc-release",
      "configurePreset": "ci-linux-gcc-release"
    },
    {
      "name": "ci-windows-msvc",
      "configurePreset": "ci-windows-msvc"
    },
    {
      "name": "ci-windows-clang",
      "configurePreset": "ci-windows-clang"
    }
  ]
}